pipeline {
  agent {
    kubernetes {
      yaml """
apiVersion: v1
kind: Pod
spec:
  serviceAccountName: jenkins
  containers:
  - name: kaniko
    image: gcr.io/kaniko-project/executor:latest
    tty: true
    volumeMounts:
    - name: kaniko-secret
      mountPath: /kaniko/.docker
      readOnly: true
  volumes:
  - name: kaniko-secret
    secret:
      secretName: regcred
"""
    }
  }

    environment {
        DOCKER_REGISTRY = 'jubelshaji'
        IMAGE_TAG = "${BUILD_NUMBER}"
    }

    stages {
        stage('Checkout Source') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/JubelShaji/CI-CD-Voting-App.git'
            }
        }

        stage('Build & Push Docker Images with Kaniko') {
            parallel {
                stage('Build Vote Image') {
                    steps {
                        sh """
                            kaniko \
                              --context=dir://\$(pwd)/vote \
                              --dockerfile=Dockerfile \
                              --destination=${DOCKER_REGISTRY}/simple_vote_app:vote-${IMAGE_TAG} \
                              --destination=${DOCKER_REGISTRY}/simple_vote_app:vote-latest \
                              --verbosity=info
                        """
                    }
                }

                stage('Build Seed Image') {
                    steps {
                        container('kaniko') {
                            sh """
                                /kaniko/executor \
                                    --context=dir://\$(pwd)/seed-data \
                                    --dockerfile=Dockerfile \
                                    --destination=${DOCKER_REGISTRY}/simple_vote_app:seed-${IMAGE_TAG} \
                                    --destination=${DOCKER_REGISTRY}/simple_vote_app:seed-latest \
                                    --verbosity=info
                            """
                        }
                    }
                }

                stage('Build Worker Image') {
                    steps {
                        container('kaniko') {
                            sh """
                                /kaniko/executor \
                                    --context=dir://\$(pwd)/worker \
                                    --dockerfile=Dockerfile \
                                    --destination=${DOCKER_REGISTRY}/simple_vote_app:worker-${IMAGE_TAG} \
                                    --destination=${DOCKER_REGISTRY}/simple_vote_app:worker-latest \
                                    --verbosity=info
                            """
                        }
                    }
                }

                stage('Build Result Image') {
                    steps {
                        container('kaniko') {
                            sh """
                                /kaniko/executor \
                                    --context=dir://\$(pwd)/result \
                                    --dockerfile=Dockerfile \
                                    --destination=${DOCKER_REGISTRY}/simple_vote_app:result-${IMAGE_TAG} \
                                    --destination=${DOCKER_REGISTRY}/simple_vote_app:result-latest \
                                    --verbosity=info
                            """
                        }
                    }
                }
            }
        }

        stage('Update Kubernetes Manifests') {
            steps {
                sh """
                    sed -i 's|jubelshaji/simple_vote_app:vote-latest|${DOCKER_REGISTRY}/simple_vote_app:vote-${IMAGE_TAG}|g' k8s-specifications/vote-deployment.yaml
                    sed -i 's|jubelshaji/simple_vote_app:worker-latest|${DOCKER_REGISTRY}/simple_vote_app:worker-${IMAGE_TAG}|g' k8s-specifications/worker-deployment.yaml
                    sed -i 's|jubelshaji/simple_vote_app:result-latest|${DOCKER_REGISTRY}/simple_vote_app:result-${IMAGE_TAG}|g' k8s-specifications/result-deployment.yaml
                """
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                sh """
                    kubectl apply -f k8s-specifications/
                """
            }
        }
    }

    post {
        success {
            echo 'üéâ Pipeline completed successfully! Images pushed & deployed.'
        }
        failure {
            echo '‚ùå Pipeline failed. Check logs for details.'
        }
    }
}
